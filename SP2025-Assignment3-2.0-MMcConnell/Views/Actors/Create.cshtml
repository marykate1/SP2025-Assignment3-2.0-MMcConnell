@model SP2025_Assignment3_2._0_MMcConnell.Models.Actor

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<!-- Navigation Bar with Always Visible Hamburger Menu -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Movie Universe</a> <!-- Creative title -->
        <!-- Hamburger Menu Button (always visible) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Menu Items (hidden in mobile view) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Movies")">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Actors")">Actors</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<h2>Create Actor</h2>
<hr />
<form asp-action="Create" method="post">
    <p4>Name</p4>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <p4>Gender</p4>
        <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <p4>Age</p4>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" type="number" class="form-control" />
    </div>
    <p4>IMDBLink</p4>
    <div class="form-group">
        <label asp-for="IMDBLink" class="control-label"></label>
        <input asp-for="IMDBLink" class="form-control" />
    </div>
    <p4>Photo Url</p4>
    <div class="form-group">
        <label asp-for="ActorPhoto" class="control-label"></label>
        <input type="file" id="ActorPhoto" name="ActorPhoto" class="form-control" />
        <span asp-validation-for="ActorPhoto" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <a href="@Url.Action("Index", "Actors")">Back to Actors List</a>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
